{
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "module": "commonjs",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "lib",
        "pretty": true,
        "rootDir": "src",
        "strict": true,
        "target": "es2017"
    },
    "include": [
        "./src/**/*.ts"
    ]
}
